@model IEnumerable<HW8.Models.Bid>

@{
    ViewBag.Title = "Homepage";
}

<div class="jumbotron">
    <h1 style="font-family:'Spectral SC'; text-align:center;">REGINALD'S ANCIENT ANTIQUITIES AUCTION HOUSE</h1>
</div>

<p class="btn btn-primary" style="width:60%; display:block; margin: 0 auto; font-weight:bold;"
   onclick="location.href='@Url.Action("Create", "Bids")'">Bid on an Item!</p>

<table class="table" style="margin-top:50px;">
    <tr>
        <th>
            Item ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.ItemName)
        </th>
        <th>
            Buyer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timestamp)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemID)
            </td>
            <td>
                @Html.ActionLink(item.Item.ItemName, "Details", "Items", new { id = item.ItemID }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buyer.BuyerName)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if (item.Timestamp.Date == DateTime.Today)
                {
                    DateTime timeOnly = item.Timestamp;
                    @timeOnly.ToString("h:mm:ss tt")
                }

                else
                {
                @Html.DisplayFor(modelItem => item.Timestamp)
                }
            </td>
        </tr>
    }

</table>